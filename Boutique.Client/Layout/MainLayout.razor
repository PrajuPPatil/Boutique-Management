@code {
    // State variables for layout functionality
    private bool menuOpen = false;              // Mobile menu toggle state
    private UserProfileDto? currentUser;        // Current authenticated user profile
    private bool isDarkMode = false;            // Current theme state

    // Initialize layout components and load user data
    protected override async Task OnInitializedAsync()
    {
        // Initialize theme service and load saved preference
        await ThemeService.InitializeAsync();
        isDarkMode = ThemeService.IsDarkMode;
        // Subscribe to theme change events
        ThemeService.OnThemeChanged += OnThemeChanged;
        // Load current user profile for display
        await LoadUserProfile();
    }

    // Handle theme change events and update UI
    private void OnThemeChanged()
    {
        isDarkMode = ThemeService.IsDarkMode;
        StateHasChanged();
    }

    // Toggle between light and dark themes
    private async Task ToggleTheme()
    {
        await ThemeService.ToggleThemeAsync();
    }

    // Toggle mobile navigation menu visibility
    private void ToggleMenu()
    {
        menuOpen = !menuOpen;
    }

    // Handle profile loaded event and update UI
    private void OnProfileLoaded(UserProfileDto user)
    {
        currentUser = user;
        StateHasChanged();
    }

    // Load current user profile from authentication state
    private async Task LoadUserProfile()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        if (authState.User.Identity?.IsAuthenticated == true)
        {
            var username = authState.User.Identity.Name;
            if (!string.IsNullOrEmpty(username))
            {
                // Create basic user profile from authentication claims
                currentUser = new UserProfileDto
                {
                    FirstName = username,
                    Role = "User"
                };
                StateHasChanged();
            }
        }
    }

    // Handle user logout and redirect to login page
    private async Task Logout()
    {
        await AuthStateProvider.MarkUserAsLoggedOut();
        Navigation.NavigateTo("/login");
    }
}