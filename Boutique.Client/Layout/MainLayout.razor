@* Main Layout Component - Primary layout for authenticated users with navigation and theming *@
@* Features: Top navigation, user profile, theme toggle, responsive design, dark mode *@
@inherits LayoutComponentBase
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage
@inject NavigationManager Navigation
@inject CustomAuthenticationStateProvider AuthStateProvider
@using Boutique.Client.Services
@using Boutique.Client.Models.DTOs
@using Boutique.Client.Components
@using Microsoft.AspNetCore.Components.Routing

@inject ThemeService ThemeService

<link href="css/compact-theme.css" rel="stylesheet" />

@* Main app container with theme-aware styling *@
<div class="app-container @(isDarkMode ? "dark-theme" : "light-theme")">
    <AuthorizeView>
        <Authorized>
            @* Top Navigation Bar with brand, menu, search, and user profile *@
            <nav class="top-navbar">
                <div class="navbar-container">
                    @* Brand Section with logo and company name *@
                    <div class="navbar-brand">
                        <i class="fas fa-cut brand-icon"></i>
                        <div class="brand-text-container">
                            <span class="brand-name">AUSWS</span>
                            <span class="brand-subtitle">Boutique</span>
                        </div>
                    </div>
                    
                    @* Main Navigation Menu with responsive mobile toggle *@
                    <div class="navbar-menu @(menuOpen ? "show" : "")">
                        <NavLink href="dashboard" class="nav-link">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </NavLink>
                        <NavLink href="customer-management" class="nav-link">
                            <i class="fas fa-users me-2"></i>Customers
                        </NavLink>
                        <NavLink href="orders" class="nav-link">
                            <i class="fas fa-shopping-cart me-2"></i>Orders
                        </NavLink>
                        
                        @* Management Dropdown with sub-navigation items *@
                        <div class="dropdown nav-dropdown">
                            <button class="nav-link dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-cogs me-2"></i>Management
                            </button>
                            <ul class="dropdown-menu">
                                <li><NavLink class="dropdown-item" href="measurement-management">
                                    <i class="fas fa-ruler me-2"></i>Measurements
                                </NavLink></li>
                                <li><NavLink class="dropdown-item" href="payment-management">
                                    <i class="fas fa-credit-card me-2"></i>Payments
                                </NavLink></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><NavLink class="dropdown-item" href="analytics">
                                    <i class="fas fa-chart-bar me-2"></i>Analytics
                                </NavLink></li>
                            </ul>
                        </div>
                    </div>
                    
                    @* Global Search Component *@
                    <div class="navbar-search">
                        <GlobalSearch />
                    </div>
                    
                    @* Right Side Actions: Theme toggle, user profile, mobile menu *@
                    <div class="navbar-right">
                        <button class="btn theme-toggle-btn" @onclick="ToggleTheme" title="Toggle Theme">
                            <i class="fas @(isDarkMode ? "fa-sun" : "fa-moon")"></i>
                        </button>
                        
                        <div class="dropdown">
                            <button class="btn user-profile-btn" type="button" data-bs-toggle="dropdown" title="@(currentUser?.FullName ?? "User Profile")">
                                <div class="user-avatar-nav">
                                    @(currentUser?.InitialLetter ?? "U")
                                </div>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end user-dropdown">
                                <li class="dropdown-header">
                                    <div class="user-profile-header">
                                        <div class="user-avatar-large">
                                            @(currentUser?.InitialLetter ?? "U")
                                        </div>
                                        <div class="user-details">
                                            <div class="user-name-large">@(currentUser?.FullName ?? "User")</div>
                                            <div class="user-email">@(currentUser?.Role ?? "User")</div>
                                        </div>
                                    </div>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li><NavLink class="dropdown-item" href="profile"><i class="fas fa-user me-2"></i>My Profile</NavLink></li>
                                <li><NavLink class="dropdown-item" href="settings"><i class="fas fa-cog me-2"></i>Settings</NavLink></li>
                                <li><NavLink class="dropdown-item" href="notifications"><i class="fas fa-bell me-2"></i>Notifications</NavLink></li>
                                <li><NavLink class="dropdown-item" href="help"><i class="fas fa-question-circle me-2"></i>Help & Support</NavLink></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><button class="dropdown-item text-danger" @onclick="Logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</button></li>
                            </ul>
                        </div>
                        
                        <!-- Mobile Menu Toggle -->
                        <button class="btn mobile-menu-toggle d-lg-none" @onclick="ToggleMenu">
                            <i class="fas fa-bars"></i>
                        </button>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="main-content">
                @Body
            </main>
        </Authorized>
        <NotAuthorized>
            <!-- Login Layout -->
            <div class="login-layout">
                @Body
            </div>
        </NotAuthorized>
    </AuthorizeView>
    
    <!-- Toast Notifications -->
    <ToastContainer />
    
    <!-- Footer -->
    <Boutique.Client.Components.FooterComponent />
</div>

