@code {
    private RegisterDTO registerModel = new();
    private string registerError = string.Empty;
    private string successMessage = string.Empty;
    private string emailWarning = string.Empty;
    private bool isLoading = false;


    
    private async Task HandleRegister()
    {
        if (isLoading) return;
        
        isLoading = true;
        registerError = string.Empty;
        successMessage = string.Empty;
        
        try
        {
            var result = await AuthService.RegisterAsync(registerModel);
            successMessage = result;
            
            // Navigate to OTP verification after a short delay to show success message
            await Task.Delay(2000);
            Navigation.NavigateTo($"/verify-otp?email={Uri.EscapeDataString(registerModel.Email)}");
        }
        catch (HttpRequestException ex)
        {
            // Extract user-friendly error message from the exception
            registerError = ex.Message;
        }
        catch (TaskCanceledException)
        {
            registerError = "Request timed out. Please check your internet connection and try again.";
        }
        catch (Exception ex)
        {
            registerError = "An unexpected error occurred. Please try again later.";
            // Log the actual error for debugging (in a real app, you'd use proper logging)
            Console.WriteLine($"Registration error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
    
    private void ValidateEmailFormat()
    {
        emailWarning = string.Empty;
        
        if (string.IsNullOrWhiteSpace(registerModel.Email))
            return;
            
        // Only validate format, not DNS
        if (!IsValidEmailFormat(registerModel.Email))
        {
            emailWarning = "Please enter a valid email address";
        }
    }
    
    private bool IsValidEmailFormat(string email)
    {
        if (string.IsNullOrWhiteSpace(email))
            return false;
            
        try
        {
            var addr = new System.Net.Mail.MailAddress(email);
            return addr.Address == email;
        }
        catch
        {
            return false;
        }
    }
}