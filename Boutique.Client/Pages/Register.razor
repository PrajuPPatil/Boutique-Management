@page "/register"
@using Boutique.Client.Models.DTOs.Authentication
@inject Boutique.Client.Services.AuthService AuthService
@inject NavigationManager Navigation
@layout EmptyLayout

<div class="register-container">
    <div class="container-fluid">
        <div class="row min-vh-100">
            <!-- Left Side - Branding -->
            <div class="col-lg-6 d-none d-lg-flex brand-section">
                <div class="brand-content">
                    <div class="brand-header">
                        <i class="fas fa-cut brand-icon"></i>
                        <h1 class="brand-title">Boutique Manager</h1>
                        <p class="brand-subtitle">Transform your fashion business with our comprehensive management platform</p>
                    </div>
                    
                    <div class="features">
                        <div class="feature">
                            <i class="fas fa-users"></i>
                            <span>Customer Management</span>
                        </div>
                        <div class="feature">
                            <i class="fas fa-ruler"></i>
                            <span>Measurement Tracking</span>
                        </div>
                        <div class="feature">
                            <i class="fas fa-chart-line"></i>
                            <span>Business Analytics</span>
                        </div>
                        <div class="feature">
                            <i class="fas fa-shield-alt"></i>
                            <span>Secure & Reliable</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side - Registration Form -->
            <div class="col-lg-6 col-12 form-section">
                <div class="form-container">
                    <div class="form-header">
                        <h2>Create Account</h2>
                        <p>Join thousands of boutique owners worldwide</p>
                    </div>

                    <EditForm Model="registerModel" OnValidSubmit="HandleRegister">
                        <DataAnnotationsValidator />
                        
                        @if (!string.IsNullOrEmpty(registerError))
                        {
                            <div class="alert alert-danger alert-dismissible fade show">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                @registerError
                                @if (registerError.Contains("Email domain not found"))
                                {
                                    <div class="mt-2">
                                        <small><strong>Tip:</strong> Please check your email spelling or try a different email provider.</small>
                                    </div>
                                }
                                <button type="button" class="btn-close" @onclick="() => registerError = string.Empty"></button>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(successMessage))
                        {
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle me-2"></i>
                                @successMessage
                                <div class="mt-2">
                                    <small>Redirecting to email verification...</small>
                                </div>
                            </div>
                        }

                        <div class="form-group">
                            <label for="username">Username</label>
                            <InputText @bind-Value="registerModel.Username" class="form-control" id="username" placeholder="Enter your username" />
                            <ValidationMessage For="@(() => registerModel.Username)" class="field-validation-error" />
                        </div>

                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <InputText @bind-Value="registerModel.Email" @onblur="ValidateEmailFormat" class="form-control" id="email" placeholder="Enter your email" />
                            <ValidationMessage For="@(() => registerModel.Email)" class="field-validation-error" />
                            @if (!string.IsNullOrEmpty(emailWarning))
                            {
                                <div class="text-danger mt-1">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    <small>@emailWarning</small>
                                </div>
                            }
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <InputText type="password" @bind-Value="registerModel.Password" class="form-control" id="password" placeholder="Create a password" />
                            <ValidationMessage For="@(() => registerModel.Password)" class="field-validation-error" />
                        </div>

                        <div class="form-group">
                            <label for="confirmPassword">Confirm Password</label>
                            <InputText type="password" @bind-Value="registerModel.ConfirmPassword" class="form-control" id="confirmPassword" placeholder="Confirm your password" />
                            <ValidationMessage For="@(() => registerModel.ConfirmPassword)" class="field-validation-error" />
                        </div>

                        <button type="submit" class="btn btn-primary" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Creating Account...</span>
                            }
                            else
                            {
                                <span>Create Account</span>
                            }
                        </button>

                        <div class="form-footer">
                            <p>Already have an account? <NavLink href="login">Sign In</NavLink></p>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

