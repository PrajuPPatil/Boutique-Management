    .spinner-border-sm {
        width: 1.5rem;
        height: 1.5rem;
    }
</style>

@code {
    private bool isLoading = true;
    private int totalCustomers = 0;
    private MeasurementStatisticsDto? statistics;
    private List<RecentMeasurementDto> recentMeasurements = new();
    private List<RecentMeasurementDto> filteredMeasurements = new();
    private string currentFilter = "All";

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            
            var customersTask = CustomerService.GetCustomersAsync();
            var statisticsTask = MeasurementService.GetMeasurementStatisticsAsync();
            var recentTask = MeasurementService.GetRecentMeasurementsAsync(20);
            
            await Task.WhenAll(customersTask, statisticsTask, recentTask);
            
            var customers = await customersTask;
            totalCustomers = customers?.Count() ?? 0;
            
            statistics = await statisticsTask;
            recentMeasurements = await recentTask;
            filteredMeasurements = recentMeasurements;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void FilterByCategory(string category)
    {
        currentFilter = category;
        if (category == "All")
        {
            filteredMeasurements = recentMeasurements;
        }
        else
        {
            filteredMeasurements = recentMeasurements
                .Where(m => m.Gender.Contains(category, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }
        StateHasChanged();
    }

    private void ViewMeasurements(int customerId)
    {
        Navigation.NavigateTo($"/measurements/{customerId}");
    }

    private void EditMeasurements(int customerId)
    {
        Navigation.NavigateTo($"/measurements/{customerId}");
    }

    private void GoToCustomers()
    {
        Navigation.NavigateTo("/customer-management");
    }
}