@page "/measurement-management"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using Boutique.Client.Models.DTOs
@inject Boutique.Client.Services.CustomerService CustomerService
@inject Boutique.Client.Services.MeasurementService MeasurementService
@inject NavigationManager Navigation

<div class="measurements-container">
    <div class="page-header text-center">
        <div class="mb-3">
            <h1 class="page-title mb-0">
                <i class="fas fa-ruler me-3"></i>Measurements
            </h1>
        </div>
        <p class="page-subtitle">Manage customer measurements and sizing</p>
    </div>

    <!-- Quick Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-icon bg-primary">
                    <i class="fas fa-ruler"></i>
                </div>
                <div class="stats-info">
                    @if (isLoading)
                    {
                        <div class="spinner-border spinner-border-sm" role="status"></div>
                    }
                    else
                    {
                        <h3 class="stats-number">@(statistics?.TotalMeasurements ?? 0)</h3>
                    }
                    <p class="stats-label">Total Measurements</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-icon bg-success">
                    <i class="fas fa-user-check"></i>
                </div>
                <div class="stats-info">
                    @if (isLoading)
                    {
                        <div class="spinner-border spinner-border-sm" role="status"></div>
                    }
                    else
                    {
                        <h3 class="stats-number">@totalCustomers</h3>
                    }
                    <p class="stats-label">Total Customers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-icon bg-warning">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stats-info">
                    <h3 class="stats-number">@(statistics?.TodayMeasurements ?? 0)</h3>
                    <p class="stats-label">Today's Measurements</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-icon bg-info">
                    <i class="fas fa-calendar-day"></i>
                </div>
                <div class="stats-info">
                    <h3 class="stats-number">@(statistics?.MenMeasurements ?? 0)</h3>
                    <p class="stats-label">Men's Measurements</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Measurement Categories -->
    <div class="card mb-4">
        <div class="card-header text-center">
            <h5 class="mb-0">
                <i class="fas fa-th-large me-2"></i>Measurement Categories
            </h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="category-card">
                        <div class="category-icon">
                            <i class="fas fa-male"></i>
                        </div>
                        <h6 class="category-title">Men's Wear</h6>
                        <p class="category-count">@(statistics?.MenMeasurements ?? 0) measurements</p>
                        <button class="btn btn-outline-primary btn-sm" @onclick="@(() => FilterByCategory("Men"))">View Details</button>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="category-card">
                        <div class="category-icon">
                            <i class="fas fa-female"></i>
                        </div>
                        <h6 class="category-title">Women's Wear</h6>
                        <p class="category-count">@(statistics?.WomenMeasurements ?? 0) measurements</p>
                        <button class="btn btn-outline-primary btn-sm" @onclick="@(() => FilterByCategory("Women"))">View Details</button>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="category-card">
                        <div class="category-icon">
                            <i class="fas fa-child"></i>
                        </div>
                        <h6 class="category-title">All Garments</h6>
                        <p class="category-count">@(statistics?.GarmentTypeCounts.Count ?? 0) types</p>
                        <button class="btn btn-outline-primary btn-sm" @onclick="@(() => FilterByCategory("All"))">View All</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Measurements -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-history me-2"></i>Recent Measurements
            </h5>
            <button class="btn btn-primary" @onclick="GoToCustomers">
                <i class="fas fa-plus me-2"></i>Add Measurement
            </button>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Customer</th>
                            <th>Gender</th>
                            <th>Garment Type</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (filteredMeasurements?.Any() == true)
                        {
                            @foreach (var measurement in filteredMeasurements)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="customer-avatar">
                                                <i class="fas fa-user"></i>
                                            </div>
                                            <div class="ms-3">
                                                <h6 class="mb-0">@measurement.CustomerName</h6>
                                                <small class="text-muted">ID: @measurement.CustomerId</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@measurement.Gender</td>
                                    <td>@measurement.GarmentType</td>
                                    <td>@measurement.CreatedDate.ToString("MMM dd, yyyy")</td>
                                    <td><span class="badge bg-success">Completed</span></td>
                                    <td>
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-outline-primary" @onclick="() => ViewMeasurements(measurement.CustomerId)">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-success" @onclick="() => EditMeasurements(measurement.CustomerId)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center p-4">
                                    <i class="fas fa-ruler fa-2x text-muted mb-2"></i>
                                    <p class="text-muted mb-0">No measurements found</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

