@page "/payments/{CustomerId:int}"
@inject NavigationManager Navigation
@inject Boutique.Client.Services.CustomerService CustomerService
@inject Boutique.Client.Services.PaymentService PaymentService
@inject Boutique.Client.Services.OrderService OrderService
@inject Boutique.Client.Services.ExportService ExportService
@inject IJSRuntime JSRuntime
@using Boutique.Client.Models.DTOs
@using Boutique.Client.Models
@using Boutique.Client.Components
@using Microsoft.JSInterop


<div class="payment-container">
    <div class="page-header text-center">
        <div class="mb-3">
            <h1 class="page-title mb-0">
                <i class="fas fa-credit-card me-3"></i>Payment Management
            </h1>
        </div>
        <p class="page-subtitle mb-3">Customer: @customerName</p>
        <div>
            <button class="btn btn-primary me-2" @onclick="ShowAddPaymentModal">
                <i class="fas fa-plus me-2"></i>Add Payment
            </button>
            <button class="btn btn-secondary" @onclick="GoBack">
                <i class="fas fa-arrow-left me-2"></i>Back
            </button>
        </div>
    </div>

    <!-- Payment Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="summary-card total">
                <div class="summary-icon">
                    <i class="fas fa-rupee-sign"></i>
                </div>
                <div class="summary-content">
                    <h3>₹@totalAmount.ToString("N0")</h3>
                    <p>Total Amount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="summary-card paid">
                <div class="summary-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="summary-content">
                    <h3>₹@paidAmount.ToString("N0")</h3>
                    <p>Paid Amount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="summary-card pending">
                <div class="summary-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="summary-content">
                    <h3>₹@pendingAmount.ToString("N0")</h3>
                    <p>Pending Amount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="summary-card orders">
                <div class="summary-icon">
                    <i class="fas fa-shopping-bag"></i>
                </div>
                <div class="summary-content">
                    <h3>@totalOrders</h3>
                    <p>Total Orders</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Payment History -->
    <div class="card shadow-sm">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-history me-2"></i>Payment History
                </h5>
                <div class="filter-controls">
                    <select class="form-select form-select-sm" @bind="statusFilter">
                        <option value="">All Status</option>
                        <option value="Paid">Paid</option>
                        <option value="Pending">Pending</option>
                        <option value="Partial">Partial</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (filteredPayments?.Any() == true)
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Order Details</th>
                                <th>Amount</th>
                                <th>Payment Status</th>
                                <th>Payment Method</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in paginatedPayments.Items)
                            {
                                <tr>
                                    <td>
                                        <div>
                                            <h6 class="mb-1">@payment.OrderDescription</h6>
                                            <small class="text-muted">Order #@payment.OrderId - @payment.CustomerName</small>
                                        </div>
                                    </td>
                                    <td>
                                        <strong>₹@payment.Amount.ToString("N0")</strong>
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(payment.Status)">
                                            @payment.Status
                                        </span>
                                    </td>
                                    <td>@payment.PaymentMethod</td>
                                    <td>@payment.PaymentDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button class="btn btn-sm btn-outline-info" @onclick="() => GenerateReceipt(payment)" title="Generate Receipt">
                                                <i class="fas fa-receipt"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-primary" @onclick="() => ViewPayment(payment)">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-success" @onclick="() => EditPayment(payment)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeletePayment(payment)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (paginatedPayments.TotalItems > 0)
                {
                    <div class="mt-3 px-3 pb-3">
                        <PaginationComponent CurrentPage="currentPage" 
                                           TotalItems="paginatedPayments.TotalItems" 
                                           PageSize="pageSize" 
                                           OnPageChange="OnPageChanged" />
                    </div>
                }
            }
            else
            {
                <div class="text-center p-4">
                    <i class="fas fa-credit-card fa-3x text-muted mb-3"></i>
                    <h5>No payments found</h5>
                    <p class="text-muted">Add the first payment for this customer</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Add/Edit Payment Modal -->
@if (showPaymentModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas @(isEditMode ? "fa-edit" : "fa-plus") me-2"></i>
                        @(isEditMode ? "Edit Payment" : "Add New Payment")
                    </h5>
                    <button type="button" class="btn-close" @onclick="ClosePaymentModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="paymentModel" OnValidSubmit="SavePayment">
                        <DataAnnotationsValidator />
                        
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <InputSelect @bind-Value="paymentModel.OrderId" class="form-select" id="orderId" disabled="@isEditMode">
                                        <option value="0">Select Order</option>
                                        @foreach (var order in customerOrders)
                                        {
                                            <option value="@order.OrderId">Order #@order.OrderId - ₹@order.TotalAmount (Remaining: ₹@order.RemainingAmount)</option>
                                        }
                                    </InputSelect>
                                    <label for="orderId">Order</label>
                                    <ValidationMessage For="@(() => paymentModel.OrderId)" class="text-danger small" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <InputNumber @bind-Value="paymentModel.Amount" class="form-control" id="amount" placeholder="Amount" step="0.01" />
                                    <label for="amount">Payment Amount (₹)</label>
                                    <ValidationMessage For="@(() => paymentModel.Amount)" class="text-danger small" />
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <InputSelect @bind-Value="paymentModel.PaymentMethod" class="form-select" id="paymentMethod">
                                        <option value="Cash">Cash</option>
                                        <option value="Card">Card</option>
                                        <option value="UPI">UPI</option>
                                        <option value="BankTransfer">Bank Transfer</option>
                                        <option value="Cheque">Cheque</option>
                                    </InputSelect>
                                    <label for="paymentMethod">Payment Method</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <InputDate @bind-Value="paymentModel.PaymentDate" class="form-control" id="paymentDate" />
                                    <label for="paymentDate">Payment Date</label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <InputText @bind-Value="paymentModel.TransactionId" class="form-control" id="transactionId" placeholder="Transaction ID" />
                            <label for="transactionId">Transaction ID (Optional)</label>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <InputTextArea @bind-Value="paymentModel.Notes" class="form-control" id="notes" placeholder="Notes" style="height: 80px;" />
                            <label for="notes">Notes</label>
                        </div>
                        
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="ClosePaymentModal">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                <i class="fas fa-save me-2"></i>
                                @(isEditMode ? "Update" : "Save") Payment
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

<style>
    /* ===================================
       Payment Management - Enhanced Styles
       =================================== */

    .payment-container {
        width: 100%;
        margin: 0 auto;
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
