            PaymentMethod = payment.PaymentMethod,
            TransactionId = payment.TransactionId,
            PaymentDate = payment.PaymentDate,
            Notes = payment.Notes
        };
        editingPaymentId = payment.PaymentId;
        isEditMode = true;
        errorMessage = null;
        showPaymentModal = true;
