    .modal-content {
        border-radius: 24px;
        border: none;
        box-shadow: 0 25px 60px rgba(0, 0, 0, 0.2);
        overflow: hidden;
    }

    .modal-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-bottom: none;
        padding: 2rem;
    }

    .modal-header .modal-title {
        font-weight: 800;
        font-size: 1.5rem;
        letter-spacing: -0.01em;
    }

    .modal-header .btn-close {
        filter: invert(1);
        opacity: 0.8;
        transition: all 0.3s ease;
    }

    .modal-header .btn-close:hover {
        opacity: 1;
        transform: scale(1.1);
    }

    .modal-body {
        padding: 2rem;
        background: white;
    }

    .modal-footer {
        background: #f8fafc;
        border-top: 1px solid rgba(99, 102, 241, 0.1);
        padding: 1.5rem 2rem;
    }

    /* Enhanced Form Controls */
    .form-floating > .form-control,
    .form-floating > .form-select {
        border: 2px solid rgba(99, 102, 241, 0.2);
        border-radius: 16px;
        transition: all 0.3s ease;
        font-size: 1rem;
        padding: 1rem 1.25rem;
        background: white;
    }

    .form-floating > .form-control:focus,
    .form-floating > .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        transform: translateY(-2px);
    }

    .form-floating > label {
        color: #6b7280;
        font-weight: 600;
        padding: 1rem 1.25rem;
    }

    /* Loading and Empty States */
    .text-center .fa-3x {
        font-size: 4rem;
        opacity: 0.3;
        color: #667eea;
    }

    .text-center h5 {
        color: #1f2937;
        font-weight: 700;
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }

    .text-center p {
        font-size: 1.1rem;
        color: #6b7280;
        font-weight: 500;
    }

    /* Enhanced Responsive Design */
    @@media (max-width: 768px) {
        .payment-container {
            padding: 1rem 0.5rem;
        }

        .page-title {
            font-size: 2rem;
        }

        .summary-card {
            flex-direction: column;
            text-align: center;
            padding: 1.5rem;
        }

        .summary-icon {
            margin-right: 0;
            margin-bottom: 1rem;
            width: 70px;
            height: 70px;
            font-size: 1.75rem;
        }

        .summary-content h3 {
            font-size: 1.75rem;
        }

        .card-header {
