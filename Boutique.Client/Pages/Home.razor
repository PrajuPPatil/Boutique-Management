    filter: drop-shadow(0 2px 10px rgba(251, 191, 36, 0.3));
}

@@keyframes cardFloat {
    0%, 100% { 
        transform: translateY(0px) rotate(0deg); 
    }
    50% { 
        transform: translateY(-20px) rotate(1deg); 
    }
}

.card-1 {
    top: 10%;
