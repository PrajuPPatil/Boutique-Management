@page "/help"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using Boutique.Client.Models.DTOs

<div class="help-container">
    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-question-circle me-3"></i>Help & Support
        </h1>
        <p class="page-subtitle">Get help and find answers to your questions</p>
    </div>

    <div class="row g-4">
        <!-- Search and Filters -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-search me-2"></i>Search Help Topics
                    </h5>
                </div>
                <div class="card-body">
                    <div class="search-filter-section">
                        <div class="search-box mb-3">
                            <input type="text" class="form-control" @bind="searchFilter.SearchTerm" @onkeypress="OnSearchKeyPress" placeholder="Search for help topics, features, or issues...">
                            <button class="btn btn-primary" @onclick="SearchArticles">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                        
                        <div class="filter-row">
                            <div class="filter-group">
                                <select class="form-select" @bind="searchFilter.Category" @bind:after="OnFilterChange">
                                    <option value="">All Categories</option>
                                    @foreach (var category in categories)
                                    {
                                        <option value="@category.Name">@category.Name (@category.ArticleCount)</option>
                                    }
                                </select>
                            </div>
                            <div class="filter-group">
                                <select class="form-select" @bind="searchFilter.Difficulty" @bind:after="OnFilterChange">
                                    <option value="">All Levels</option>
                                    <option value="Beginner">Beginner</option>
                                    <option value="Intermediate">Intermediate</option>
                                    <option value="Advanced">Advanced</option>
                                </select>
                            </div>
                            <div class="filter-group">
                                <select class="form-select" @bind="searchFilter.SortBy" @bind:after="OnFilterChange">
                                    <option value="relevance">Most Relevant</option>
                                    <option value="popular">Most Popular</option>
                                    <option value="recent">Most Recent</option>
                                    <option value="title">Title A-Z</option>
                                </select>
                            </div>
                            <div class="filter-group">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" @bind="searchFilter.ShowPopularOnly" @bind:after="OnFilterChange" id="popularOnly">
                                    <label class="form-check-label" for="popularOnly">Popular Only</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Help Articles -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-book me-2"></i>Help Articles
                        <span class="badge bg-primary ms-2">@paginatedResult.TotalCount</span>
                    </h5>
                    <div class="results-info">
                        Showing @((paginatedResult.PageNumber - 1) * paginatedResult.PageSize + 1)-@Math.Min(paginatedResult.PageNumber * paginatedResult.PageSize, paginatedResult.TotalCount) of @paginatedResult.TotalCount
                    </div>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="loading-spinner">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2">Loading articles...</p>
                        </div>
                    }
                    else if (paginatedResult.Articles.Any())
                    {
                        <div class="articles-list">
                            @foreach (var article in paginatedResult.Articles)
                            {
                                <div class="article-item" @onclick="() => ToggleArticle(article.Id)">
                                    <div class="article-header">
                                        <div class="article-title-section">
                                            <h6 class="article-title">@article.Title</h6>
                                            <div class="article-meta">
                                                <span class="badge bg-light text-dark me-2">@article.Category</span>
                                                <span class="difficulty-badge difficulty-@article.Difficulty.ToLower()">@article.Difficulty</span>
                                                @if (article.IsPopular)
                                                {
                                                    <span class="badge bg-warning text-dark ms-2"><i class="fas fa-star me-1"></i>Popular</span>
                                                }
                                                <span class="text-muted ms-2"><i class="fas fa-clock me-1"></i>@article.EstimatedReadTime min read</span>
                                                <span class="text-muted ms-2"><i class="fas fa-eye me-1"></i>@article.ViewCount views</span>
                                            </div>
                                        </div>
                                        <div class="article-actions">
                                            <i class="fas @(expandedArticles.Contains(article.Id) ? "fa-chevron-up" : "fa-chevron-down")"></i>
                                        </div>
                                    </div>
                                    @if (expandedArticles.Contains(article.Id))
                                    {
                                        <div class="article-content">
                                            <div class="article-body">
                                                @((MarkupString)article.Content)
                                            </div>
                                            <div class="article-footer">
                                                <div class="article-tags">
                                                    @foreach (var tag in article.Tags)
                                                    {
                                                        <span class="tag-badge">#@tag</span>
                                                    }
                                                </div>
                                                <div class="article-dates">
                                                    <small class="text-muted">
                                                        Created: @article.CreatedDate.ToString("MMM dd, yyyy") | 
                                                        Updated: @article.UpdatedDate.ToString("MMM dd, yyyy")
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                        
                        <!-- Pagination -->
                        @if (paginatedResult.TotalPages > 1)
                        {
                            <nav class="pagination-nav mt-4">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item @(paginatedResult.HasPreviousPage ? "" : "disabled")">
                                        <button class="page-link" @onclick="() => ChangePage(1)" disabled="@(!paginatedResult.HasPreviousPage)">
                                            <i class="fas fa-angle-double-left"></i>
                                        </button>
                                    </li>
                                    <li class="page-item @(paginatedResult.HasPreviousPage ? "" : "disabled")">
                                        <button class="page-link" @onclick="() => ChangePage(paginatedResult.PageNumber - 1)" disabled="@(!paginatedResult.HasPreviousPage)">
                                            <i class="fas fa-angle-left"></i>
                                        </button>
                                    </li>
                                    
                                    @for (int i = Math.Max(1, paginatedResult.PageNumber - 2); i <= Math.Min(paginatedResult.TotalPages, paginatedResult.PageNumber + 2); i++)
                                    {
                                        <li class="page-item @(i == paginatedResult.PageNumber ? "active" : "")">
                                            <button class="page-link" @onclick="() => ChangePage(i)">@i</button>
                                        </li>
                                    }
                                    
                                    <li class="page-item @(paginatedResult.HasNextPage ? "" : "disabled")">
                                        <button class="page-link" @onclick="() => ChangePage(paginatedResult.PageNumber + 1)" disabled="@(!paginatedResult.HasNextPage)">
                                            <i class="fas fa-angle-right"></i>
                                        </button>
                                    </li>
                                    <li class="page-item @(paginatedResult.HasNextPage ? "" : "disabled")">
                                        <button class="page-link" @onclick="() => ChangePage(paginatedResult.TotalPages)" disabled="@(!paginatedResult.HasNextPage)">
                                            <i class="fas fa-angle-double-right"></i>
                                        </button>
                                    </li>
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <div class="no-results">
                            <i class="fas fa-search fa-3x text-muted mb-3"></i>
                            <h5>No articles found</h5>
                            <p class="text-muted">Try adjusting your search terms or filters</p>
                            <button class="btn btn-outline-primary" @onclick="ClearFilters">
                                <i class="fas fa-times me-2"></i>Clear Filters
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Categories -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-th-large me-2"></i>Categories
                    </h5>
                </div>
                <div class="card-body">
                    <div class="categories-list">
                        @foreach (var category in categories)
                        {
                            <div class="category-item @(searchFilter.Category == category.Name ? "active" : "")" @onclick="() => FilterByCategory(category.Name)">
                                <div class="category-icon">
                                    <i class="@category.Icon"></i>
                                </div>
                                <div class="category-info">
                                    <h6>@category.Name</h6>
                                    <p>@category.Description</p>
                                    <small>@category.ArticleCount articles</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            <!-- Contact Support -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-headset me-2"></i>Contact Support
                    </h5>
                </div>
                <div class="card-body">
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="contact-info">
                            <h6>Email Support</h6>
                            <p>support@boutique.com</p>
                            <small>Response within 24 hours</small>
                        </div>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="contact-info">
                            <h6>Phone Support</h6>
                            <p>+91 9876543210</p>
                            <small>Mon-Fri, 9 AM - 6 PM</small>
                        </div>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-comments"></i>
                        </div>
                        <div class="contact-info">
                            <h6>Live Chat</h6>
                            <p>Available now</p>
                            <small>Average response: 5 mins</small>
                        </div>
                    </div>
                    <button class="btn btn-primary w-100 mt-3">
                        <i class="fas fa-comment-dots me-2"></i>Start Live Chat
                    </button>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-link me-2"></i>Quick Links
                    </h5>
                </div>
                <div class="card-body">
                    <div class="quick-links">
                        <a href="#" class="quick-link">
                            <i class="fas fa-book me-2"></i>User Manual
                        </a>
                        <a href="#" class="quick-link">
                            <i class="fas fa-video me-2"></i>Video Tutorials
                        </a>
                        <a href="#" class="quick-link">
                            <i class="fas fa-download me-2"></i>Download Resources
                        </a>
                        <a href="#" class="quick-link">
                            <i class="fas fa-bug me-2"></i>Report a Bug
                        </a>
                        <a href="#" class="quick-link">
                            <i class="fas fa-lightbulb me-2"></i>Feature Request
                        </a>
                        <a href="#" class="quick-link">
                            <i class="fas fa-shield-alt me-2"></i>Privacy Policy
                        </a>
                        <a href="#" class="quick-link">
                            <i class="fas fa-file-contract me-2"></i>Terms of Service
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private HelpSearchFilterDto searchFilter = new();
    private PaginatedHelpResultDto paginatedResult = new();
    private List<HelpCategoryDto> categories = new();
    private HashSet<int> expandedArticles = new();
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        LoadCategories();
        await LoadArticles();
    }

    private void LoadCategories()
    {
        categories = new List<HelpCategoryDto>
        {
            new() { Name = "Getting Started", Icon = "fas fa-play-circle", ArticleCount = 12, Description = "Basic setup and first steps" },
            new() { Name = "Customer Management", Icon = "fas fa-users", ArticleCount = 8, Description = "Managing customer data" },
            new() { Name = "Measurements", Icon = "fas fa-ruler", ArticleCount = 15, Description = "Recording and managing measurements" },
            new() { Name = "Payments", Icon = "fas fa-credit-card", ArticleCount = 6, Description = "Payment tracking and billing" },
            new() { Name = "Reports", Icon = "fas fa-chart-bar", ArticleCount = 4, Description = "Analytics and reporting" },
            new() { Name = "Troubleshooting", Icon = "fas fa-wrench", ArticleCount = 10, Description = "Common issues and solutions" }
        };
    }

    private async Task LoadArticles()
    {
        isLoading = true;
        StateHasChanged();
        
        await Task.Delay(500); // Simulate API call
        
        var allArticles = GetSampleArticles();
        var filteredArticles = FilterArticles(allArticles);
        
        paginatedResult = new PaginatedHelpResultDto
        {
            Articles = filteredArticles.Skip((searchFilter.PageNumber - 1) * searchFilter.PageSize).Take(searchFilter.PageSize).ToList(),
            TotalCount = filteredArticles.Count,
            PageNumber = searchFilter.PageNumber,
            PageSize = searchFilter.PageSize
        };
        
        isLoading = false;
        StateHasChanged();
    }

    private List<HelpArticleDto> GetSampleArticles()
    {
        return new List<HelpArticleDto>
        {
            new() { Id = 1, Title = "How to add a new customer", Content = "<p>To add a new customer, navigate to the Customer Management page and click the 'Add New Customer' button. Fill in all required fields including name, contact information, and address details.</p>", Category = "Customer Management", Tags = new[] { "customer", "add", "management" }, CreatedDate = DateTime.Now.AddDays(-30), UpdatedDate = DateTime.Now.AddDays(-5), ViewCount = 245, IsPopular = true, Difficulty = "Beginner", EstimatedReadTime = 3 },
            new() { Id = 2, Title = "Recording customer measurements", Content = "<p>Navigate to the Measurements page, select the customer, choose the garment category (Men's, Women's, or Kids), select the specific garment type, and enter the measurements carefully.</p>", Category = "Measurements", Tags = new[] { "measurements", "recording", "garments" }, CreatedDate = DateTime.Now.AddDays(-25), UpdatedDate = DateTime.Now.AddDays(-3), ViewCount = 189, IsPopular = true, Difficulty = "Intermediate", EstimatedReadTime = 5 },
            new() { Id = 3, Title = "Payment tracking and management", Content = "<p>Go to the Payments page to view all payment records. You can add new payments, update existing ones, and track payment status (Paid, Partial, Pending).</p>", Category = "Payments", Tags = new[] { "payments", "tracking", "billing" }, CreatedDate = DateTime.Now.AddDays(-20), UpdatedDate = DateTime.Now.AddDays(-2), ViewCount = 156, IsPopular = false, Difficulty = "Beginner", EstimatedReadTime = 4 },
            new() { Id = 4, Title = "Advanced measurement techniques", Content = "<p>Learn advanced measurement techniques for complex garments including traditional wear, formal suits, and custom designs. This guide covers precision measuring and quality control.</p>", Category = "Measurements", Tags = new[] { "advanced", "techniques", "precision" }, CreatedDate = DateTime.Now.AddDays(-15), UpdatedDate = DateTime.Now.AddDays(-1), ViewCount = 98, IsPopular = false, Difficulty = "Advanced", EstimatedReadTime = 8 },
            new() { Id = 5, Title = "Setting up your boutique profile", Content = "<p>Complete your boutique setup by configuring your business profile, adding your logo, setting up payment methods, and customizing your workflow preferences.</p>", Category = "Getting Started", Tags = new[] { "setup", "profile", "configuration" }, CreatedDate = DateTime.Now.AddDays(-10), UpdatedDate = DateTime.Now, ViewCount = 312, IsPopular = true, Difficulty = "Beginner", EstimatedReadTime = 6 },
            new() { Id = 6, Title = "Generating customer reports", Content = "<p>Create comprehensive reports for customer analytics, payment summaries, and business insights. Learn to export data and schedule automated reports.</p>", Category = "Reports", Tags = new[] { "reports", "analytics", "export" }, CreatedDate = DateTime.Now.AddDays(-8), UpdatedDate = DateTime.Now, ViewCount = 87, IsPopular = false, Difficulty = "Intermediate", EstimatedReadTime = 7 },
            new() { Id = 7, Title = "Troubleshooting login issues", Content = "<p>Common solutions for login problems including password reset, account verification, and browser compatibility issues. Step-by-step troubleshooting guide.</p>", Category = "Troubleshooting", Tags = new[] { "login", "password", "troubleshooting" }, CreatedDate = DateTime.Now.AddDays(-5), UpdatedDate = DateTime.Now, ViewCount = 134, IsPopular = false, Difficulty = "Beginner", EstimatedReadTime = 4 }
        };
    }

    private List<HelpArticleDto> FilterArticles(List<HelpArticleDto> articles)
    {
        var filtered = articles.AsQueryable();

        if (!string.IsNullOrEmpty(searchFilter.SearchTerm))
        {
            filtered = filtered.Where(a => a.Title.Contains(searchFilter.SearchTerm, StringComparison.OrdinalIgnoreCase) ||
                                         a.Content.Contains(searchFilter.SearchTerm, StringComparison.OrdinalIgnoreCase) ||
                                         a.Tags.Any(t => t.Contains(searchFilter.SearchTerm, StringComparison.OrdinalIgnoreCase)));
        }

        if (!string.IsNullOrEmpty(searchFilter.Category))
        {
            filtered = filtered.Where(a => a.Category == searchFilter.Category);
        }

        if (!string.IsNullOrEmpty(searchFilter.Difficulty))
        {
            filtered = filtered.Where(a => a.Difficulty == searchFilter.Difficulty);
        }

        if (searchFilter.ShowPopularOnly)
        {
            filtered = filtered.Where(a => a.IsPopular);
        }

        filtered = searchFilter.SortBy switch
        {
            "popular" => filtered.OrderByDescending(a => a.ViewCount),
            "recent" => filtered.OrderByDescending(a => a.UpdatedDate),
            "title" => filtered.OrderBy(a => a.Title),
            _ => filtered.OrderByDescending(a => a.IsPopular).ThenByDescending(a => a.ViewCount)
        };

        return filtered.ToList();
    }

    private async Task SearchArticles()
    {
        searchFilter.PageNumber = 1;
        await LoadArticles();
    }

    private async Task OnFilterChange()
    {
        searchFilter.PageNumber = 1;
        await LoadArticles();
    }

    private async Task OnSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchArticles();
        }
    }

    private async Task ChangePage(int pageNumber)
    {
        searchFilter.PageNumber = pageNumber;
        await LoadArticles();
    }

    private void ToggleArticle(int articleId)
    {
        if (expandedArticles.Contains(articleId))
        {
            expandedArticles.Remove(articleId);
        }
        else
        {
            expandedArticles.Add(articleId);
        }
    }

    private async Task FilterByCategory(string categoryName)
    {
        searchFilter.Category = searchFilter.Category == categoryName ? "" : categoryName;
        searchFilter.PageNumber = 1;
        await LoadArticles();
    }

    private async Task ClearFilters()
    {
        searchFilter = new HelpSearchFilterDto();
        await LoadArticles();
    }
}

