@page "/notifications"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization

<div class="notifications-container">
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title">
                    <i class="fas fa-bell me-3"></i>Notifications
                </h1>
                <p class="page-subtitle">Stay updated with your business activities</p>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-primary">
                    <i class="fas fa-check-double me-2"></i>Mark All Read
                </button>
                <button class="btn btn-outline-danger">
                    <i class="fas fa-trash me-2"></i>Clear All
                </button>
            </div>
        </div>
    </div>

    <!-- Notification Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-icon bg-primary">
                    <i class="fas fa-bell"></i>
                </div>
                <div class="stats-info">
                    <h3 class="stats-number">24</h3>
                    <p class="stats-label">Total Notifications</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-icon bg-warning">
                    <i class="fas fa-exclamation-circle"></i>
                </div>
                <div class="stats-info">
                    <h3 class="stats-number">8</h3>
                    <p class="stats-label">Unread</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-icon bg-success">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stats-info">
                    <h3 class="stats-number">16</h3>
                    <p class="stats-label">Read</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-icon bg-info">
                    <i class="fas fa-calendar-day"></i>
                </div>
                <div class="stats-info">
                    <h3 class="stats-number">5</h3>
                    <p class="stats-label">Today</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Notification Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-center">
                <div class="col-md-3">
                    <select class="form-select">
                        <option selected>All Notifications</option>
                        <option>Unread Only</option>
                        <option>Read Only</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option selected>All Types</option>
                        <option>Orders</option>
                        <option>Payments</option>
                        <option>Customers</option>
                        <option>System</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option selected>All Time</option>
                        <option>Today</option>
                        <option>This Week</option>
                        <option>This Month</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-outline-secondary w-100">
                        <i class="fas fa-filter me-2"></i>Apply Filters
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Notifications List -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Recent Notifications
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="notifications-list">
                <!-- Unread Notification -->
                <div class="notification-item unread">
                    <div class="notification-icon bg-success">
                        <i class="fas fa-shopping-bag"></i>
                    </div>
                    <div class="notification-content">
                        <h6 class="notification-title">New Order Received</h6>
                        <p class="notification-message">Order #ORD003 from Priya Sharma for ₹15,000</p>
                        <span class="notification-time">2 minutes ago</span>
                    </div>
                    <div class="notification-actions">
                        <button class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-success">
                            <i class="fas fa-check"></i>
                        </button>
                    </div>
                </div>

                <!-- Unread Notification -->
                <div class="notification-item unread">
                    <div class="notification-icon bg-warning">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="notification-content">
                        <h6 class="notification-title">Payment Reminder</h6>
                        <p class="notification-message">Payment of ₹10,000 is pending from Rajesh Kumar</p>
                        <span class="notification-time">1 hour ago</span>
                    </div>
                    <div class="notification-actions">
                        <button class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-success">
                            <i class="fas fa-check"></i>
                        </button>
                    </div>
                </div>

                <!-- Read Notification -->
                <div class="notification-item">
                    <div class="notification-icon bg-primary">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <div class="notification-content">
                        <h6 class="notification-title">New Customer Registered</h6>
                        <p class="notification-message">Anjali Patel has registered as a new customer</p>
                        <span class="notification-time">3 hours ago</span>
                    </div>
                    <div class="notification-actions">
                        <button class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>

                <!-- Read Notification -->
                <div class="notification-item">
                    <div class="notification-icon bg-info">
                        <i class="fas fa-credit-card"></i>
                    </div>
                    <div class="notification-content">
                        <h6 class="notification-title">Payment Received</h6>
                        <p class="notification-message">₹25,000 payment received from Meera Singh via UPI</p>
                        <span class="notification-time">5 hours ago</span>
                    </div>
                    <div class="notification-actions">
                        <button class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>

                <!-- System Notification -->
                <div class="notification-item">
                    <div class="notification-icon bg-secondary">
                        <i class="fas fa-cog"></i>
                    </div>
                    <div class="notification-content">
                        <h6 class="notification-title">System Update</h6>
                        <p class="notification-message">System maintenance completed successfully</p>
                        <span class="notification-time">1 day ago</span>
                    </div>
                    <div class="notification-actions">
                        <button class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* ===================================
       Notifications Page - Enhanced Styles
       =================================== */

    .notifications-container {
        padding: 2rem 1rem;
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        min-height: 100vh;
        position: relative;
    }

    .notifications-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="dots" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="rgba(99,102,241,0.05)"/></pattern></defs><rect width="100%" height="100%" fill="url(%23dots)"/></svg>') repeat;
        opacity: 0.6;
        pointer-events: none;
    }

    .page-header {
        margin-bottom: 2.5rem;
        position: relative;
        z-index: 1;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 900;
        color: #1f2937;
        margin-bottom: 0.75rem;
        letter-spacing: -0.02em;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.05);
    }

    .page-subtitle {
        color: #6b7280;
        font-size: 1.1rem;
        margin: 0;
        font-weight: 400;
    }

    /* Enhanced Stats Cards */
    .stats-card {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        height: 100%;
        display: flex;
        align-items: center;
        gap: 1.5rem;
        border: 1px solid rgba(99, 102, 241, 0.1);
        position: relative;
        overflow: hidden;
    }

    .stats-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease;
    }

    .stats-card:hover::before {
        transform: scaleX(1);
    }

    .stats-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 20px 50px rgba(99, 102, 241, 0.15);
        border-color: rgba(99, 102, 241, 0.3);
    }

    .stats-icon {
        width: 80px;
        height: 80px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: white;
        flex-shrink: 0;
        transition: all 0.3s ease;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        position: relative;
        overflow: hidden;
    }

    .stats-icon::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.6s;
    }

    .stats-card:hover .stats-icon::before {
        left: 100%;
    }

    .stats-card:hover .stats-icon {
        transform: scale(1.1) rotate(5deg);
        box-shadow: 0 15th 40px rgba(0, 0, 0, 0.2);
    }

    .stats-number {
        font-size: 2.25rem;
        font-weight: 900;
        color: #1f2937;
        line-height: 1;
        margin-bottom: 0.5rem;
    }

    .stats-label {
        color: #6b7280;
        font-size: 0.95rem;
        margin: 0;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.02em;
    }

    /* Enhanced Cards */
    .card {
        border: 1px solid rgba(99, 102, 241, 0.1);
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        background: white;
        position: relative;
        overflow: hidden;
    }

    .card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease;
    }

    .card:hover::before {
        transform: scaleX(1);
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 50px rgba(99, 102, 241, 0.15);
        border-color: rgba(99, 102, 241, 0.3);
    }

    .card-header {
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        border-bottom: 1px solid rgba(99, 102, 241, 0.1);
        padding: 2rem;
        border-radius: 20px 20px 0 0 !important;
        position: relative;
    }

    .card-header h5 {
        font-weight: 800;
        color: #1f2937;
        font-size: 1.4rem;
        margin: 0;
        letter-spacing: -0.01em;
    }

    .card-body {
        position: relative;
    }

    /* Enhanced Form Controls */
    .form-select {
        border: 2px solid rgba(99, 102, 241, 0.2);
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
        background: white;
        padding: 0.75rem 1rem;
    }

    .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        transform: translateY(-2px);
    }

    /* Enhanced Buttons */
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 16px;
        font-weight: 700;
        padding: 0.875rem 2rem;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-3px) scale(1.02);
        box-shadow: 0 15px 40px rgba(102, 126, 234, 0.5);
    }

    .btn-outline-primary,
    .btn-outline-danger,
    .btn-outline-secondary {
        border-radius: 12px;
        font-weight: 600;
        padding: 0.75rem 1.5rem;
        transition: all 0.3s ease;
        border: 2px solid;
    }

    .btn-outline-primary:hover {
        background: #667eea;
        border-color: #667eea;
        color: white;
        transform: translateY(-2px);
    }

    .btn-outline-danger:hover {
        background: #f56565;
        border-color: #f56565;
        color: white;
        transform: translateY(-2px);
    }

    .btn-outline-secondary:hover {
        background: #6b7280;
        border-color: #6b7280;
        color: white;
        transform: translateY(-2px);
    }

    /* Enhanced Notifications List */
    .notifications-list {
        max-height: 700px;
        overflow-y: auto;
        padding-right: 0.5rem;
    }

    .notification-item {
        display: flex;
        align-items: center;
        padding: 2rem;
        border-bottom: 1px solid rgba(99, 102, 241, 0.08);
        transition: all 0.3s ease;
        border-radius: 12px;
        margin-bottom: 0.5rem;
    }

    .notification-item:hover {
        background: rgba(99, 102, 241, 0.05);
        transform: translateX(5px);
        padding-left: 2.5rem;
    }

    .notification-item:last-child {
        border-bottom: none;
    }

    .notification-item.unread {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.05) 100%);
        border-left: 4px solid #667eea;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.1);
    }

    .notification-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
        margin-right: 1.5rem;
        flex-shrink: 0;
        transition: all 0.3s ease;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        position: relative;
        overflow: hidden;
    }

    .notification-icon::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.6s;
    }

    .notification-item:hover .notification-icon::before {
        left: 100%;
    }

    .notification-item:hover .notification-icon {
        transform: scale(1.1);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
    }

    .notification-content {
        flex: 1;
    }

    .notification-title {
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
        line-height: 1.3;
    }

    .notification-message {
        color: #6b7280;
        font-size: 0.95rem;
        margin-bottom: 0.5rem;
        font-weight: 500;
        line-height: 1.4;
    }

    .notification-time {
        color: #9ca3af;
        font-size: 0.85rem;
        font-weight: 600;
        padding: 0.25rem 0.75rem;
        background: rgba(99, 102, 241, 0.1);
        border-radius: 8px;
        display: inline-block;
    }

    .notification-actions {
        display: flex;
        gap: 0.75rem;
    }

    .notification-actions .btn {
        border-radius: 10px;
        padding: 0.5rem 0.75rem;
        font-weight: 600;
        transition: all 0.3s ease;
        border: 2px solid;
    }

    .notification-actions .btn:hover {
        transform: translateY(-2px) scale(1.05);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    /* Enhanced Color Scheme */
    .bg-primary { 
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important; 
    }
    .bg-success { 
        background: linear-gradient(135deg, #48bb78 0%, #38a169 100%) !important; 
    }
    .bg-warning { 
        background: linear-gradient(135deg, #ed8936 0%, #dd6b20 100%) !important; 
    }
    .bg-info { 
        background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%) !important; 
    }
    .bg-secondary { 
        background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%) !important; 
    }

    /* Enhanced Responsive Design */
    @@media (max-width: 768px) {
        .notifications-container {
            padding: 1rem 0.5rem;
        }

        .page-title {
            font-size: 2rem;
        }

        .page-header .d-flex {
            flex-direction: column;
            align-items: flex-start !important;
            gap: 1rem;
        }

        .page-header .d-flex.gap-2 {
            flex-direction: row;
            width: 100%;
        }

        .page-header .btn {
            flex: 1;
        }

        .stats-card {
            flex-direction: column;
            text-align: center;
            padding: 1.5rem;
        }

        .stats-icon {
            margin-bottom: 1rem;
            width: 70px;
            height: 70px;
            font-size: 1.75rem;
        }

        .card-header {
            padding: 1.5rem;
        }

        .notification-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
            padding: 1.5rem;
        }

        .notification-icon {
            margin-right: 0;
            align-self: center;
        }

        .notification-actions {
            width: 100%;
            justify-content: center;
        }
    }

    @@media (max-width: 575.98px) {
        .page-title {
            font-size: 1.75rem;
        }

        .stats-number {
            font-size: 1.75rem;
        }

        .stats-icon {
            width: 60px;
            height: 60px;
            font-size: 1.5rem;
        }

        .card-header h5 {
            font-size: 1.2rem;
        }
    }

    /* Performance Optimizations */
    .stats-card,
    .card,
    .notification-item,
    .btn,
    .form-select,
    .notification-icon {
        will-change: transform;
    }

    /* Reduce motion for users who prefer it */
    @@media (prefers-reduced-motion: reduce) {
        .stats-card,
        .card,
        .notification-item,
        .btn,
        .form-select,
        .notification-icon {
            transition: none !important;
            animation: none !important;
        }
    }
</style>