</style>

@code {
    // Login form model for data binding
    private LoginDTO loginModel = new();
    // Error message for login failures
    private string loginError = string.Empty;
    // Success message for successful operations (e.g., email verification)
    private string successMessage = string.Empty;
    // Loading state for login button
    private bool isLoading = false;

    // Initialize component and check for email verification success
    protected override void OnInitialized()
    {
        // Check URL parameters for email verification success
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).TryGetValue("verified", out var verified) && verified == "true")
        {
            successMessage = "Email verified successfully! You can now sign in.";
        }
    }

    // Handle login form submission with comprehensive error handling
    private async Task HandleLogin()
    {
        // Prevent multiple simultaneous login attempts
        if (isLoading) return;
        
        // Set loading state and clear previous errors
        isLoading = true;
        loginError = string.Empty;
        
        try
        {
            // Attempt login via authentication service
            var loginResponse = await AuthService.LoginAsync(loginModel);
            if (!string.IsNullOrEmpty(loginResponse?.Token))
            {
                // Store JWT token and update authentication state
                await AuthStateProvider.MarkUserAsAuthenticated(loginResponse.Token);
                // Navigate to dashboard on successful login
                Navigation.NavigateTo("/dashboard", true);
            }
            else
            {
                // Handle invalid credentials
                loginError = "Invalid email or password. Please try again.";
            }
        }
        catch (HttpRequestException ex)
        {
            // Extract detailed error message from the exception
            loginError = ex.Message;
        }
        catch (TaskCanceledException)
        {
            loginError = "Request timed out. Please check your internet connection and try again.";
        }
        catch (Exception ex)
        {
            // Handle unexpected errors
            loginError = "An unexpected error occurred. Please try again later.";
            Console.WriteLine($"Login error: {ex.Message}");
        }
        finally
        {
            // Reset loading state
            isLoading = false;
        }
    }
}