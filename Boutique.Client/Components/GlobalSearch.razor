@code {
    // Search state variables
    private string searchQuery = "";                    // Current search query
    private GlobalSearchResultDto? searchResults;       // Search results from API
    private bool showResults = false;                   // Whether to show results dropdown
    private Timer? searchTimer;                         // Debounce timer for search input

    // Handle search input with debouncing to avoid excessive API calls
    private async void OnSearchInput(ChangeEventArgs e)
    {
        searchQuery = e.Value?.ToString() ?? "";
        
        // Cancel previous search timer
        searchTimer?.Dispose();
        
        // Clear results if query is empty
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            searchResults = null;
            showResults = false;
            StateHasChanged();
            return;
        }

        // Start new search timer with 300ms delay (debouncing)
        searchTimer = new Timer(_ => _ = PerformSearch(), null, 300, Timeout.Infinite);
    }

    // Perform actual search operation via API
    private Task PerformSearch()
    {
        if (string.IsNullOrWhiteSpace(searchQuery)) return Task.CompletedTask;

        return Task.Run(async () =>
        {
            try
            {
                // Call search service to get results
                searchResults = await SearchService.GlobalSearchAsync(searchQuery);
                showResults = true;
                // Update UI on main thread
                await InvokeAsync(StateHasChanged);
            }
            catch (Exception ex)
            {
                // Log search errors for debugging
                Console.WriteLine($"Search error: {ex.Message}");
            }
        });
    }

    private void ShowResults()
    {
        if (searchResults != null)
            showResults = true;
    }

    private void HideResultsDelayed()
    {
        _ = Task.Delay(200).ContinueWith(_ => 
        {
            showResults = false;
            InvokeAsync(StateHasChanged);
        });
    }

    // Navigation methods for search result items
    private void NavigateToCustomer(int customerId)
    {
        Navigation.NavigateTo($"/customer-profile/{customerId}");
        HideResults();
    }

    private void NavigateToOrder(int orderId)
    {
        Navigation.NavigateTo($"/orders");
        HideResults();
    }

    private void NavigateToPayment(int paymentId)
    {
        Navigation.NavigateTo($"/payment-management");
        HideResults();
    }

    // Hide search results and clear query
    private void HideResults()
    {
        showResults = false;
        searchQuery = "";
        StateHasChanged();
    }

    public void Dispose()
    {
        searchTimer?.Dispose();
    }
}