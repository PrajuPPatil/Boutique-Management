@* Global Search Component - Real-time search across customers, orders, and payments *@
@* Features: Debounced search, dropdown results, keyboard navigation *@
@using Boutique.Client.Services
@inject SearchService SearchService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="global-search">
    @* Search input with icon and event handlers *@
    <div class="search-input-container">
        <input type="text" class="form-control search-input" 
               placeholder="Search customers, orders, payments..." 
               @bind="searchQuery" 
               @oninput="OnSearchInput"
               @onfocus="ShowResults"
               @onblur="HideResultsDelayed" />
        <i class="fas fa-search search-icon"></i>
    </div>

    @* Search results dropdown with categorized results *@
    @if (showResults && searchResults != null)
    {
        <div class="search-results">
            @if (searchResults.TotalResults == 0)
            {
                <div class="no-results">No results found</div>
            }
            else
            {
                @* Customer search results section *@
                @if (searchResults.Customers.Any())
                {
                    <div class="result-section">
                        <h6>Customers</h6>
                        @foreach (var customer in searchResults.Customers)
                        {
                            <div class="result-item" @onclick="() => NavigateToCustomer(customer.CustomerId)">
                                <i class="fas fa-user"></i>
                                <div>
                                    <strong>@customer.CustomerName</strong>
                                    <small>@customer.PhoneNo</small>
                                </div>
                            </div>
                        }
                    </div>
                }

                @if (searchResults.Orders.Any())
                {
                    <div class="result-section">
                        <h6>Orders</h6>
                        @foreach (var order in searchResults.Orders)
                        {
                            <div class="result-item" @onclick="() => NavigateToOrder(order.OrderId)">
                                <i class="fas fa-shopping-bag"></i>
                                <div>
                                    <strong>Order #@order.OrderId</strong>
                                    <small>@order.CustomerName - @order.Status</small>
                                </div>
                            </div>
                        }
                    </div>
                }

                @if (searchResults.Payments.Any())
                {
                    <div class="result-section">
                        <h6>Payments</h6>
                        @foreach (var payment in searchResults.Payments)
                        {
                            <div class="result-item" @onclick="() => NavigateToPayment(payment.PaymentId)">
                                <i class="fas fa-credit-card"></i>
                                <div>
                                    <strong>â‚¹@payment.Amount</strong>
                                    <small>@payment.CustomerName - @payment.PaymentMethod</small>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
        </div>
    }
</div>

